@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@inject BookAppStore.Service.UserService _request;
@model BookModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <h5 class="display-4">All Book</h5>
    <div class="row card-detail">
        <div class="col-6 card-detail-img">
            <img class="d-block w-100 card-detail-imge" src="@Model.CoverImageUrl" alt="@Model.CoverImageUrl">
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-12">
                    <h2>@Model.Title</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-primary">
                    <span class="label label-primary">By: </span>
                    <span class="monospaced">@Model.ApplicationUser</span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a class="btn btn-outline-primary" href="@Model.BookPdfUrl" target="_blank">
                        Read now
                    </a>
                </div>
            </div>
            <hr/>

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category - </span>@Model.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total pages - </span>@Model.TotalPage</li>
                <li class="list-group-item"><span class="font-weight-bold">Read Times - </span>5k</li>
            </ul>
        </div>
    </div>
</div>